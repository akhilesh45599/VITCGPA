<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#474545"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nemaliakhilesh.vitcgpa.FiveActivity">


    <TextView
        android:text="Enter Cat1 Marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText1"
        android:textColor="@color/cpb_white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText1"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:hint="0-50" />

    <TextView
        android:text="Enter CAT2 Marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_alignEnd="@+id/textView1"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:textColor="@color/cpb_white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/editText2"
        android:hint="0-50" />

    <TextView
        android:text="Digitall Assignments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="@color/cpb_white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="12dp"
        android:id="@+id/editText3"
        android:hint="0-30" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="11dp"
        android:id="@+id/editText5"
        android:hint="0-100" />

    <com.dd.CircularProgressButton
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:cpb_textIdle="Cal Internals"
        app:cpb_cornerRadius="10dp"
        android:id="@+id/in"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Lab Marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@color/cpb_white"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginEnd="18dp"
        android:id="@+id/editText4"
        android:hint="0-100"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/editText3" />

    <TextView
        android:text="Project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView5"
        android:textColor="@color/cpb_white"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:text="Expected FAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@color/cpb_white"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/editText5"
        android:id="@+id/editText6"
        android:hint="0-100" />

    <com.dd.CircularProgressButton
        android:layout_width="match_parent"
        app:cpb_cornerRadius="10dp"
        app:cpb_textIdle="Cal Total"
        android:id="@+id/to"
        android:layout_height="35dp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@color/cpb_white"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView5" />
</RelativeLayout>
