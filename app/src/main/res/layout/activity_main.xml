<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#474545"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nemaliakhilesh.vitcgpa.MainActivity">


    <com.dd.CircularProgressButton
        android:id="@+id/pp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_cornerRadius="48dp"
        android:layout_marginTop="21dp"
        app:cpb_textIdle="Become 9 pointer"
        android:layout_below="@+id/cgpa"
        android:layout_alignParentStart="true" />

    <com.dd.CircularProgressButton
        android:id="@+id/gpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_cornerRadius="48dp"
        android:layout_marginTop="23dp"
        app:cpb_textIdle="Calculate GPA"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <com.dd.CircularProgressButton
        android:id="@+id/cgpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_cornerRadius="48dp"
        android:layout_marginTop="21dp"
        app:cpb_textIdle="Calculate CGPA"
        android:layout_below="@+id/gpa"
        android:layout_alignParentStart="true" />

    <com.dd.CircularProgressButton
        android:id="@+id/po"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_cornerRadius="48dp"
        android:layout_marginTop="19dp"
        app:cpb_textIdle="Retain 9 pointer"
        android:layout_below="@+id/pp"
        android:layout_alignParentStart="true" />


    <com.dd.CircularProgressButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_cornerRadius="48dp"
        app:cpb_textIdle="Calculate internals "
        android:layout_below="@+id/po"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/ii" />

    <com.dd.CircularProgressButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_cornerRadius="48dp"
        app:cpb_textIdle="Calculate CSE grades"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/ii"
        android:layout_alignParentStart="true"
        android:id="@+id/cse" />

    <TextView
        android:text="Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@color/cpb_white"
        android:textSize="24sp"
        android:layout_below="@+id/cse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="VIT CGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
