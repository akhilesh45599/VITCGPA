<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#474545"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nemaliakhilesh.vitcgpa.Main3Activity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint=" Currentsem CGPA ex-9.0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Current Sem Credits ex-27"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="45dp"
        android:id="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="CGPA before sem ex-8.5"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="37dp"
        android:id="@+id/editText3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Credits completed ex-70"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="28dp"
        android:id="@+id/editText1" />

    <com.dd.CircularProgressButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_textComplete="CGPA is "
        app:cpb_textIdle="Calculate CGPA"
        android:layout_marginTop="47dp"
        app:cpb_cornerRadius="48dp"
        android:layout_below="@+id/editText1"
        android:layout_alignParentStart="true"
        android:id="@+id/cc"
        android:onClick="a (Main3Activity)" />

    <TextView
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/cpb_white" />

    <TextView
        android:text="CurrentGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText"
        android:layout_marginStart="38dp"
        android:textColor="@color/cpb_white" />

    <TextView
        android:text="CurrentSemCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView11"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginStart="20dp" />

    <TextView
        android:text="CGPA beforesem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="14dp"
        android:textSize="18sp"
        android:layout_below="@+id/editText2"
        android:layout_alignEnd="@+id/textView11"
        android:textColor="@color/cpb_white" />

    <TextView
        android:text="Credits Complted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/textView10" />


</RelativeLayout>
