<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#474545"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nemaliakhilesh.vitcgpa.Main4">


    <TextView
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"
        android:textColor="@color/cpb_white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp" />
    <com.dd.CircularProgressButton
        android:id="@+id/po"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cpb_cornerRadius="48dp"
        app:cpb_textIdle="Calculate"
        app:cpb_textComplete="you should get"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="38dp"
        android:onClick="b (Main4)" />


    <TextView
        android:text="Want to become 9/8/7 pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="9pointer/8pointer"
        android:layout_below="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <TextView
        android:text="Credits Completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/textView16"
        android:textSize="18sp"
        android:textColor="@color/cpb_white"
        android:layout_above="@+id/editText2"
        android:layout_alignEnd="@+id/textView2" />


    <TextView
        android:text="Currentsem Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textSize="18sp"
        android:textColor="@color/cpb_white"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Credits Completed"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Current Sem Credits"

        android:id="@+id/editText3"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Current CGPA"
        android:id="@+id/editText1"
        android:layout_above="@+id/textView16"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:text="To Become 9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="@color/cpb_white"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:text="CurrentCGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="18sp"
        android:textColor="@color/cpb_white"
        android:layout_above="@+id/editText1"
        android:layout_alignStart="@+id/textView2" />


</RelativeLayout>
